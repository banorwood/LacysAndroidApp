<?xml version="1.0" encoding="utf-8"?>
<!--
code is from here. feel free to mess around with the colors and make something that looks better.
I just put some random colors in.
http://stackoverflow.com/questions/1521640/standard-android-button-with-a-different-color#-->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/black"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/dark_blue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/dark_blue"
                android:startColor="@color/black"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/dark_blue"
                android:startColor="@color/light_blue"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/dark_blue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>