<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lacys" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeEssentialsScreen"
            android:label="Home Essentials"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".WomenScreen"
            android:label="Women"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".MenScreen"
            android:label="Men"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".SignInScreen"
            android:label="Sign In"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".MultipleProductDisplayScreen"
            android:label="View Products"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".SingleProductViewScreen"
            android:label="View Details"
            android:theme="@style/AppTheme"></activity>

    </application>

</manifest>
